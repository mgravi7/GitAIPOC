# ============================================
# LOCAL POC ENVIRONMENT CONFIGURATION
# ============================================
# This is a template for local POC testing
# Copy to C:\Repos\GitAIPOC\.env for actual use

# GitLab CE (POC Instance)
GITLAB_ROOT_PASSWORD=ChangeMe123!POC
GITLAB_EXTERNAL_URL=http://localhost
GITLAB_HTTP_PORT=80
GITLAB_HTTPS_PORT=443
GITLAB_SSH_PORT=2222

# GitLab API (will be generated after GitLab setup)
GITLAB_URL=http://gitlab
GITLAB_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx
GITLAB_WEBHOOK_SECRET=your-random-webhook-secret
GITLAB_TRIGGER_TAG=ai-review

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxx
AI_MODEL=anthropic:claude-sonnet-4.5-20241022

# Security
API_KEY=your-random-bearer-token
ENVIRONMENT=development

# Rate Limiting (relaxed for POC)
RATE_LIMIT_ENABLED=true
GLOBAL_RATE_LIMIT=100/minute
WEBHOOK_RATE_LIMIT=10/minute

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Tool System
TOOLS_ENABLED=true
TOOLS_PARALLEL_EXECUTION=true
CONTEXT7_ENABLED=false

# Standards-Based Rules
RULE_ENGINE_ENABLED=true
OWASP_INTEGRATION=true
NIST_INTEGRATION=true
PYTHON_STANDARDS=true
FRAMEWORK_STANDARDS=true

# Logging (verbose for POC)
LOG_LEVEL=DEBUG
DEBUG=true

# CORS
ALLOWED_ORIGINS=http://localhost,http://localhost:80

# Cost Tracking
DAILY_BUDGET_USD=5.00
MONTHLY_BUDGET_USD=100.00
ALERT_THRESHOLD_PERCENT=80
COST_ALERT_EMAIL=your-email@company.com

# Docker Network
DOCKER_NETWORK=gitaipoc-network
