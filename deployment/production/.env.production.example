# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# This is a template for team deployment
# Configure for your team's GitLab CE instance

# GitLab API (Team's Self-Hosted Instance)
# NOTE: GitLab CE itself is NOT deployed in production (already exists)
# Only the review agent is deployed
GITLAB_URL=https://gitlab.yourcompany.com
GITLAB_TOKEN=glpat-production-token-here
GITLAB_WEBHOOK_SECRET=production-webhook-secret
GITLAB_TRIGGER_TAG=ai-review

# Anthropic API (Production Key with Budget Limits)
ANTHROPIC_API_KEY=sk-ant-production-key-here
AI_MODEL=anthropic:claude-sonnet-4.5-20241022

# Security (Production Bearer Token)
API_KEY=production-bearer-token-here
ENVIRONMENT=production

# Rate Limiting (Stricter for Production)
RATE_LIMIT_ENABLED=true
GLOBAL_RATE_LIMIT=200/minute
WEBHOOK_RATE_LIMIT=20/minute

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Tool System
TOOLS_ENABLED=true
TOOLS_PARALLEL_EXECUTION=true
CONTEXT7_ENABLED=true
CONTEXT7_API_URL=http://context7:8080

# Standards-Based Rules
RULE_ENGINE_ENABLED=true
OWASP_INTEGRATION=true
NIST_INTEGRATION=true
PYTHON_STANDARDS=true
FRAMEWORK_STANDARDS=true

# Logging (Less verbose for production)
LOG_LEVEL=INFO
DEBUG=false

# CORS (Team GitLab URL only)
ALLOWED_ORIGINS=https://gitlab.yourcompany.com

# Cost Tracking (Team Budget)
DAILY_BUDGET_USD=5.00
MONTHLY_BUDGET_USD=100.00
ALERT_THRESHOLD_PERCENT=80
COST_ALERT_EMAIL=team-lead@company.com
COST_ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/xxx

# Docker Network
DOCKER_NETWORK=gitaipoc-network
