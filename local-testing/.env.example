# ============================================
# Local Testing Environment Variables
# ============================================
# This configuration is for testing with LOCAL GitLab CE
# See: docs/deployment/local-testing.md

# ===== GitLab CE Configuration =====
GITLAB_ROOT_PASSWORD=YourSecurePassword123

# ===== GitLab API Configuration =====
# Use http://gitlab for Docker network communication
GITLAB_URL=http://gitlab
GITLAB_TOKEN=glpat-your-token-here
GITLAB_WEBHOOK_SECRET=your-webhook-secret-here
GITLAB_TRIGGER_LABEL=ai-review

# ===== Anthropic Configuration =====
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_API_VERSION=2023-06-01

# ===== Application Configuration =====
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# ===== Rate Limiting =====
RATE_LIMIT_ENABLED=true
MAX_REVIEWS_PER_HOUR=50

# ===== Review Configuration =====
REVIEW_TIMEOUT=120
MAX_DIFF_SIZE=10000
